@model IEnumerable<VirtualStore.Models.Employee>

<div class="container">
    <h3>Сотрудник</h3>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Имя</th>
                <th>Фамилия</th>
                <th>Возраст</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.Name</td>
                    <td>@employee.SecondName</td>
                    <td>@employee.Age</td>
                    <td>
                        <a asp-action="Details" asp-route-Id="@employee.Id">Инфо</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <hr />
    <a asp-controller="Home" asp-action="Index">На главную</a>
</div>
